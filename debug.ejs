# usage
# curl <%= requestUrl %> | bash

set -e
git clone https://github.com/ketan/snap-debug
cd snap-debug

npm install > /dev/null 2>&1

echo "!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"
echo "!!!Welcome to the Snap debugger!!!"
echo "!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"

echo "The debugger will run for 10 minutes before it is terminated!"
echo "Open your browser at <%= baseUrl %> to execute commands"

URL="<%= baseUrl %>" timeout 10m node client.js
